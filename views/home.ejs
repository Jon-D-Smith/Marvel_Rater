<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <title>Home Page</title>
</head>

<body>
    <div class="nav">
        <h1>Movie Ratings</h1>
        <a href="movies/new"><i class="fas fa-plus-square"> New Rating</i></a>
    </div>

    <div class="container">


        <% for(let movie of movies) { %>
            <div class="movie-card">
                <div class="Picture"><img src="<%=movie.image%>" alt=""></div>
                <div class="title">

                    <div class="icons" style="float:right; display: inline;">
                        <a href="/movies/<%=movie._id%>/edit"><button><i class="fas fa-edit"></i></button></a>
                        <form action="/movies/<%=movie._id%>?_method=DELETE" id="deleteForm" method="POST">
                            <button><i class="fas fa-trash"></i></button>
                        </form>

                    </div>
                    <h1>
                        <%=movie.title%>
                    </h1>


                </div>
                <div class="score">
                    <h4>Comedy: <%=movie.comedy%>
                    </h4>
                    <h4>Immersion: <%=movie.immersion%>
                    </h4>
                    <h4>East Eggs: <%=movie.eggs%>
                    </h4>
                    <h4>Emotion: <%=movie.emotion%>
                    </h4>
                    <h4>Character Development: <%=movie.development%>
                    </h4>

                    <h4 class="total">Total Rating: <%= (movie.comedy + movie.immersion +movie.eggs + movie.emotion +
                            movie.development).toFixed(2) %>
                    </h4>
                </div>



            </div>

            <% } %>
    </div>


</body>

</html>